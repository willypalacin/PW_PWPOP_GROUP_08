
{% extends "base.twig" %} {% block title %} Search page {% endblock %}
{% set maxproduct = 6 %}
{% block content %}


    <!--
        <img id = "lupa"src="{{ base_url() }}/assets/lupa.png">
        <input id=search type="search">  -->
    <div class="container">
        <div class="col">
            <h1> {{product.title}}</h1>
            <h4> {{product.description}}</h4>
            <h5> {{product.price }}â‚¬</h5>
            <h5> {{categ}}</h5>


    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
            <div class="carousel-inner">
            {% set active = 0 %}
            {% for image in images %}
                {% if image.id_product == product.id_product %}
                    {% set active = active + 1%}
                    {% if active == 1 %}
                        <div class="carousel-item active">
                            <img style = "height: 129px; width: 229px;" class="d-block w-100" id = product_image src = "{{ base_url()}}/pictures/{{image.product_image}}" alt="">
                        </div>
                    {% endif %}
                    {% if active > 1 %}
                        <div class="carousel-item ">
                            <img class="d-block w-100" style = "height: 129px; width: 229px;" id = product_image src = "{{ base_url()}}/pictures/{{image.product_image}}" alt="">
                        </div>
                    {% endif %}
                {% endif %}
            {% endfor %}
            </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    </div>

            <form name="my-form"
                  id="upload-form"
                  action="{{ path_for('overview')}}"
                  enctype="multipart/form-data"
                  method="POST">


                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" name="id_product" class="btn btn-primary" value="{{product.id_product}}">UPDATE PRODUCT</button>
                    </div>
                </div>
            </form>

            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">REMOVE</button>










        </div>
    </div>

    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">REMOVE WARNING</h4>
                </div>
                <div class="modal-body">
                    <p>If you accept the product it will be permanently deleted!</p>
                </div>
                <form name="my-form"
                      id="upload-form"
                      action="{{ path_for('remove')}}"
                      enctype="multipart/form-data"
                      method="POST">


                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" name="id_product" class="btn btn-primary" value="{{product.id_product }}">CONTINUE AND REMOVE PRODUCT</button>
                        </div>
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">CANCEL</button>
                    <!--<button type="button" class="btn btn-default" data-dismiss="modal">CONTINUE</button>-->
                </div>
            </div>

        </div>
    </div>





{% endblock %}