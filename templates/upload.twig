{% extends "base.twig" %}
{% block title %} Upload Product {% endblock %}
{% block content %}
    <form>

        <div class="form-group row">
            <legend for="inputEmail3" class="col-sm-2 col-form-label">Title</legend>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title" placeholder="What are you selling?">
            </div>
        </div>
        <div class="form-group row">

            <legend for="inputPassword3" class="col-sm-2 col-form-label">Price</legend>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="price" placeholder="How much does it cost?">
            </div>
        </div>
        <div class="form-group row">

            <legend for="inputPassword3" class="col-sm-2 col-form-label">Category</legend>
            <div class="col-sm-10">
                <select class="form-control">
                    <option>Sports</option>
                    <option>Fashion</option>
                    <option>Computers and electronic</option>
                    <option>Cars</option>
                    <option>Games</option>
                    <option>Home</option>
                    <option>Other</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <legend class="col-sm-2 col-form-label">Description</legend>
            <div class="col-sm-10">
                <textarea class="form-control" id="description" rows="7" placeholder="Tell me something about your product!"></textarea>
                <small id="areaTextInfo" class="form-text text-muted">It must contain a minimum of 20 characters.</small>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Upload Product</button>
            </div>
        </div>
    </form>
{% endblock %}
