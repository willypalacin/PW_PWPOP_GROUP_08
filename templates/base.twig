<body>


<div class="col"> <!-- navegador -->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">PWPOP</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/home">Home</a></li>
                <li><a href="/upload">Page 1</a></li>
                <li><a href="#">Page 2</a></li>
                <li><a href="#">Page 3</a></li>
                <li><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                        <img width="10px" height="10px" src="{{ base_url() }}/assets/lupa.png"">
                    </button></li>
            </ul>
        </div>
    </nav>
    {% block content %} {% endblock %}
</div>



</body>
<!-- Modal -->

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action= "search" method="POST" accept-charset="utf-8">
                    <label for="staticEmail"  class="col-sm-2 col-form-label">Title</label>
                    <div class="col-sm-10">
                        <input type="text" name = "title" class="form-form-control form-control-lg" id="title" placeholder="">
                    </div>
                    <label for="category" class="col-sm-2 col-form-label">Category</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="exampleFormControlSelect1">
                            <option value="1">Computers and electronic</option>
                            <option value="2">Cars</option>
                            <option value="3">Sports</option>
                            <option value="4">Games</option>
                            <option value="5">Fashion</option>
                            <option value="6">Home</option>
                            <option value="7">Other</option>
                        </select>
                    </div>
                    <label for="min_price" class="col-sm-2 col-form-label">Minimum price</label>
                    <div class="col-sm-10">
                        <input type="text" name = "min_price"class="form-control" id="title" placeholder="">
                    </div>
                    <label for="max_price" class="col-sm-2 col-form-label">Minimum price</label>
                    <div class="col-sm-10">
                        <input type="text" name = "max_price"class="form-control" id="title" placeholder="">
                    </div>

                    <label for="staticEmail"  class="col-sm-2 col-form-label">  </label>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


</html>
