
{% extends "base.twig" %} {% block title %} Search page {% endblock %}
{% set maxproduct = 6 %}
{% block content %}
    <!--
        <img id = "lupa"src="{{ base_url() }}/assets/lupa.png">
        <input id=search type="search">  -->
    <div class="container">
    <div class="row">
    {% set counter = 0 %}


    {% for product in products if counter < maxproduct %}


        <div class="col-sm">
        <div class="product_card">
            <div class="product_image">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        {% set active = 0 %}
                        {% for image in images %}
                        {% if image.id_product == product.id_product %}
                            {% set active = active + 1%}
                            {% if active == 1 %}
                            <div class="carousel-item active">
                                <img style = "height: 129px; width: 229px;" class="d-block w-100" id = product_image src = "{{ base_url()}}/pictures/{{image.product_image}}" alt="">
                            </div>
                            {% endif %}

                            {% if active > 1 %}
                                <div class="carousel-item ">
                                    <img class="d-block w-100" style = "height: 129px; width: 229px;" id = product_image src = "{{ base_url()}}/pictures/{{image.product_image}}" alt="">
                                </div>
                            {% endif %}

                        {% endif %}
                        {% endfor %}

                    </div>

                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>







            <form id="login-form"
                  action="/home"
                  method="POST">
            <div class="title_box">
                <div class="title">{{product.title}}</div>
                <div class="rating_box">
                    <button class="corbutton" type="submit">
                    <img class="cor" src= "{{ base_url() }}/assets/cor_vacio.png"></button>
                </div>
                <input type="hidden"  name="prod_id" value="{{ product.id_product }}">
            </div>
            <div class ="tag"> {{categ[counter]}}</div>
            <div class ="description">{{product.description}} </div>
            <div class ="price_title"> Price </div>
            <div class ="price_box"> <div class = "price">{{product.price}}â‚¬</div> </div>
            <div class = "button_container">
                <button class = "button_buy" type="button">BUY</button>

            </div>
            </form>
        </div>
        </div>





        {% set counter = counter + 1 %}

    {% endfor %}
        </div>
    </div>










{% endblock %}